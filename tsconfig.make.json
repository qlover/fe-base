{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "./ts-build/make",
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.make.tsbuildinfo"
  },
  "include": ["./make/**/*.ts", "vitest.config.ts"],
  "exclude": [
    "**/node_modules/*",
    "**/dist",
    "**/build",
    "packages/create-app/templates"
  ],
  "references": [{ "path": "./packages/fe-release" }]
}
