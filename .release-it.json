{
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true
    }
  },
  "git": {
    "push": false,
    "commitMessage": "chore(tag): release v${version}",
    "requireCleanWorkingDir": true,
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}",
    "pushRepo": "origin"
  }
}
