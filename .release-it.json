{
  "npm": {
    "publish": true,
    "tokenref": "NPM_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true
    }
  },
  "git": {
    "requireCleanWorkingDir": true,
    "tag": true,
    "tagName": "v${version}",
    "commit": true,
    "commitMessage": "chore(tag): release v${version}",
    "push": false
  },
  "github": {
    "release": true,
    "releaseName": "chore(tag): release v${version}",
    "pr": true,
    "prTitle": "chore(tag): release v${version}",
    "prBody": "This is the release PR for version ${version}",
    "draft": false,
    "autoMerge": true
  }
}
