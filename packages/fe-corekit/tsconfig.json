{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "ts-build",
    "tsBuildInfoFile": "ts-build/.tsbuildinfo",
    "target": "ES5",
    "strict": true,
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "ts-build",
    "__tests__",
    "__mocks__",
    "../../tools"
  ],
  "references": [{ "path": "../logger" }]
}
