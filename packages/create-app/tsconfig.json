{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": "./",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "ES2015",
    "downlevelIteration": true,
    "strict": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
