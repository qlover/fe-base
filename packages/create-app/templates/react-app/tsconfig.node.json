{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": ["vite.config.ts", "lib"]
}
