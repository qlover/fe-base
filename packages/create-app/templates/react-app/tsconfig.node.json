{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@config/*": ["./config/*"]
    }
  },
  "include": ["vite.config.ts", "config", "lib"],
  "exclude": ["lib/**/*.tsx"]
}
