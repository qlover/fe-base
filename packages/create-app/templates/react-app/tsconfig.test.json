{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vitest/globals", "vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./config/*"],
      "@__tests__/*": ["./__tests__/*"],
      "@__mocks__/*": ["./__tests__/__mocks__/*"]
    }
  },
  "include": ["__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
