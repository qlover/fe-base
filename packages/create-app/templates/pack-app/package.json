{
  "name": "pack-app",
  "version": "0.0.0",
  "description": "A template for fe-pack-app",
  "type": "module",
  "private": true,
  "repository": {
    "type": "github",
    "url": "https://github.com/qlover/fe-base"
  },
  "homepage": "https://github.com/qlover/fe-base#readme",
  "scripts": {
    "build": "pnpm -r run build",
    "prettier": "prettier --ignore-path .prettierignore **/*.{js,ts,json,cjs,mjs} --write",
    "lint": "eslint . --fix",
    "test": "pnpm -r run test",
    "clean": "fe-clean",
    "clean:build": "fe-clean -f packages/*/dist -r",
    "check-packages": "fe-check-packages",
    "commit": "fe-commit",
    "clean-branch": "fe-clean-branch"
  },
  "keywords": [
    "template",
    "fe-pack-app"
  ],
  "author": "qlover",
  "license": "ISC",
  "devEngines": {
    "node": ">=18.19.0"
  },
  "devDependencies": {
    "@qlover/fe-scripts": "latest",
    "@qlover/fe-standard": "workspace:*",
    "@qlover/fe-utils": "latest",
    "@qlover/fe-release": "latest",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/react": "^16.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.0",
    "rollup": "^4.24.2",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.0",
    "vite": "^5.4.8",
    "vitest": "^3.0.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix --quiet",
      "prettier --write"
    ],
    "packages/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.1.0"
}
