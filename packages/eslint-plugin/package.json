{
  "name": "@qlover/eslint-plugin",
  "version": "1.0.8",
  "description": "ESLint plugin for qlover's TypeScript projects",
  "type": "module",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint src --fix",
    "build": "tsup",
    "build:docs": "fe-code2md --removePrefix -p ./src/index.ts -g ./docs -o ./docs/.output/eslint-plugin.json -t ./docs/.output/eslint-plugin.tpl.json --formatOutput prettier"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "typescript"
  ],
  "peerDependencies": {
    "@typescript-eslint/parser": ">=6.0.0",
    "eslint": ">=8.0.0",
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.24.1",
    "@typescript-eslint/types": "^8.39.1",
    "@typescript-eslint/utils": "^8.24.1",
    "@typescript-eslint/rule-tester": "^8.24.1",
    "typescript": "^5.4.5",
    "eslint": "^9.13.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
