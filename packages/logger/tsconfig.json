{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "./ts-build",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "ts-build",
    "__tests__",
    "__mocks__",
    "../../tools"
  ]
}
