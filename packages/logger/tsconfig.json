{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "ts-build",
    "tsBuildInfoFile": "ts-build/.tsbuildinfo",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["vitest/globals", "node"]
  },
  "include": ["src", "src/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist", "ts-build", "__mocks__", "../../tools"]
}
