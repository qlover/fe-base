{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "declaration": false,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./"
  },
  "include": ["common/**/*", "server/**/*"]
}
