{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "downlevelIteration": true,
    "strict": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true
  },
  "include": [
    "src",
    "example",
    "package.json",
    "*.ts",
    "__tests__",
    "__mocks__"
  ],
  "exclude": ["dist", "node_modules", "ts-build"],
  "references": [
    { "path": "../fe-corekit" },
    { "path": "../env-loader" },
    { "path": "../scripts-context" }
  ]
}
