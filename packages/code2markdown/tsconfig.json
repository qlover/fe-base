{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "ts-build",
    "tsBuildInfoFile": "ts-build/.tsbuildinfo",
    "downlevelIteration": true,
    "strict": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "allowJs": true
  },
  "include": ["src", "example", "package.json"],
  "exclude": ["dist", "node_modules", "ts-build", "__tests__", "__mocks__"],
  "references": [
    { "path": "../fe-corekit" },
    { "path": "../env-loader" },
    { "path": "../scripts-context" }
  ]
}
