{
  "compilerOptions": {
    // 允许
    // "allowJs": true,
    "baseUrl": ".",
    "rootDir": "src",
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    /* Strict Type-Checking Options */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"
  },
  // 保证 ts-node 执行正确
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "packages/_work"]
}
